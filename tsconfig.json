{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": ["ES2017"],
    "importHelpers": true
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "./index.ts",
    "./index.d.ts",
    "node_modules",
    "./**/*.spec.ts",
    "examples",
    "src/__tests__"
  ]
}
